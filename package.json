{
  "name": "helm-deploy-action",
  "version": "0.0.1",
  "description": "deploy your helm chart to k8s",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "node --trace-warnings node_modules/.bin/jest --detectOpenHandles --no-cache",
    "integration": "yarn run build && node --trace-warnings node_modules/.bin/jest --no-cache",
    "all": "yarn run build && yarn run format && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romnn/helm-deploy-action.git"
  },
  "keywords": [
    "actions",
    "helm",
    "k8s",
    "deployment",
    "cd",
    "kubernetes"
  ],
  "author": {
    "name": "romnn",
    "url": "https://github.com/romnn"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/github": "6.0.0",
    "chmodr": "^1.2.0",
    "chownr": "^3.0.0",
    "glob": "^10.3.12",
    "linux-sys-user": "^1.1.3",
    "mustache": "^4.1.0"
  },
  "devDependencies": {
    "@types/chmodr": "^1.0.0",
    "@types/chownr": "^1.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/mustache": "^4.1.0",
    "@types/node": "^20.12.7",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "metro-memory-fs": "^0.80.8",
    "prettier": "3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  }
}
